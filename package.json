{
	"name": "sweep-nes",
	"displayName": "Sweep Next Edit",
	"description": "Next Edit Autocomplete using Sweep Model",
	"version": "0.3.7",
	"publisher": "SweepAI",
	"repository": {
		"type": "git",
		"url": "https://github.com/sweepai/vscode-nes"
	},
	"icon": "assets/sweep-square.png",
	"private": true,
	"engines": {
		"vscode": "^1.108.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"icons": {
			"sweep-icon": {
				"description": "Sweep Icon",
				"default": {
					"fontPath": "assets/sweep-icons.woff2",
					"fontCharacter": "\\ea01"
				}
			}
		},
		"commands": [
			{
				"command": "sweep.triggerNextEdit",
				"title": "Sweep: Trigger Next Edit Suggestion"
			},
			{
				"command": "sweep.setApiKey",
				"title": "Sweep: Set API Key"
			},
			{
				"command": "sweep.chooseMode",
				"title": "Sweep: Choose Mode"
			},
			{
				"command": "sweep.togglePrivacyMode",
				"title": "Sweep: Toggle Privacy Mode"
			},
			{
				"command": "sweep.toggleEnabled",
				"title": "Sweep: Toggle Enabled"
			},
			{
				"command": "sweep.showMenu",
				"title": "Sweep: Show Menu"
			},
			{
				"command": "sweep.acceptJumpEdit",
				"title": "Sweep: Accept Jump Edit"
			},
			{
				"command": "sweep.acceptInlineEdit",
				"title": "Sweep: Accept Inline Edit"
			},
			{
				"command": "sweep.dismissJumpEdit",
				"title": "Sweep: Dismiss Jump Edit"
			}
		],
		"keybindings": [
			{
				"command": "sweep.acceptJumpEdit",
				"key": "tab",
				"when": "editorTextFocus && sweep.hasJumpEdit && !editorHasSelection && !inlineSuggestionVisible && !suggestWidgetVisible"
			},
			{
				"command": "sweep.dismissJumpEdit",
				"key": "escape",
				"when": "editorTextFocus && sweep.hasJumpEdit"
			}
		],
		"configuration": {
			"title": "Sweep Next Edit",
			"properties": {
				"sweep.apiKey": {
					"type": "string",
					"default": "",
					"description": "API key for authentication"
				},
				"sweep.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "window",
					"description": "Enable or disable Sweep Next Edit suggestions"
				},
				"sweep.mode": {
					"type": "string",
					"default": "hosted",
					"enum": [
						"hosted",
						"local"
					],
					"description": "Use hosted Sweep API or a local OpenAI-compatible server"
				},
				"sweep.localUrl": {
					"type": "string",
					"default": "http://127.0.0.1:8080",
					"scope": "machine",
					"description": "Base URL for local OpenAI-compatible server"
				},
				"sweep.metricsEnabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable telemetry metrics"
				},
				"sweep.privacyMode": {
					"type": "boolean",
					"default": false,
					"description": "When enabled completions will not be trained on"
				},
				"sweep.maxContextFiles": {
					"type": "number",
					"default": 5,
					"description": "Maximum number of recently viewed files to include as context"
				},
				"sweep.autocompleteExclusionPatterns": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/.env*",
						"**/*.pem",
						"**/*.key",
						"**/*.cert",
						"**/*.crt",
						"**/.dev.vars",
						"**/secrets.yml"
					],
					"description": "File name suffixes or globs to exclude from autocomplete"
				},
				"sweep.autocompleteSnoozeUntil": {
					"type": "number",
					"default": 0,
					"description": "Unix timestamp (ms) until which autocomplete is snoozed (0 disables snooze)"
				},
				"sweep.autocompleteDebounceMs": {
					"type": "number",
					"default": null,
					"description": "Debounce duration (ms) for inline autocomplete requests. Leave empty to use defaults (300ms hosted, 800ms local)."
				}
			}
		}
	},
	"scripts": {
		"build": "bun build src/extension/activate.ts --outfile=out/extension.js --external=vscode --format=cjs --target=node",
		"typecheck": "bun tsgo --noEmit",
		"lint": "bun biome check .",
		"fix": "bun biome check . --write"
	},
	"dependencies": {
		"@shikijs/core": "^3.21.0",
		"@shikijs/engine-javascript": "^3.21.0",
		"@shikijs/langs": "^3.21.0",
		"@shikijs/themes": "^3.21.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/bun": "1.3.7",
		"@types/vscode": "1.108.1",
		"@typescript/native-preview": "7.0.0-dev.20260127.1"
	}
}

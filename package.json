{
	"name": "sweep-nes",
	"displayName": "Sweep Next Edit",
	"description": "Next Edit Autocomplete using Sweep Model",
	"version": "0.1.3",
	"publisher": "SweepAI",
	"repository": {
		"type": "git",
		"url": "https://github.com/sweepai/vscode-nes"
	},
	"icon": "assets/sweep-square.png",
	"private": true,
	"engines": {
		"vscode": "^1.108.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"enabledApiProposals": [
		"inlineCompletionsAdditions"
	],
	"contributes": {
		"icons": {
			"sweep-icon": {
				"description": "Sweep Icon",
				"default": {
					"fontPath": "assets/sweep-icons.woff2",
					"fontCharacter": "\\ea01"
				}
			}
		},
		"commands": [
			{
				"command": "sweep.triggerNextEdit",
				"title": "Sweep: Trigger Next Edit Suggestion"
			},
			{
				"command": "sweep.setApiKey",
				"title": "Sweep: Set API Key"
			},
			{
				"command": "sweep.togglePrivacyMode",
				"title": "Sweep: Toggle Privacy Mode"
			},
			{
				"command": "sweep.toggleEnabled",
				"title": "Sweep: Toggle Enabled"
			},
			{
				"command": "sweep.showMenu",
				"title": "Sweep: Show Menu"
			},
			{
				"command": "sweep.acceptJumpEdit",
				"title": "Sweep: Accept Jump Edit"
			},
			{
				"command": "sweep.dismissJumpEdit",
				"title": "Sweep: Dismiss Jump Edit"
			},
			{
				"command": "sweep.toggleExperimentalNesApi",
				"title": "Sweep: Toggle NES API"
			}
		],
		"keybindings": [
			{
				"command": "sweep.acceptJumpEdit",
				"key": "tab",
				"when": "editorTextFocus && sweep.hasJumpEdit && !sweep.nesApiEnabled && !editorHasSelection && !inlineSuggestionVisible && !suggestWidgetVisible"
			},
			{
				"command": "sweep.dismissJumpEdit",
				"key": "escape",
				"when": "editorTextFocus && sweep.hasJumpEdit && !sweep.nesApiEnabled"
			}
		],
		"configuration": {
			"title": "Sweep Next Edit",
			"properties": {
				"sweep.apiKey": {
					"type": "string",
					"default": "",
					"description": "API key for authentication"
				},
				"sweep.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "window",
					"description": "Enable or disable Sweep Next Edit suggestions"
				},
				"sweep.privacyMode": {
					"type": "boolean",
					"default": false,
					"description": "When enabled completions will not be trained on"
				},
				"sweep.maxContextFiles": {
					"type": "number",
					"default": 5,
					"description": "Maximum number of recently viewed files to include as context"
				},
				"sweep.useExperimentalNesApi": {
					"type": "boolean",
					"default": false,
					"description": "Use experimental NES API for inline edit rendering. Requires VS Code with proposed API support."
				}
			}
		}
	},
	"scripts": {
		"build": "bun build src/extension.ts --outfile=out/extension.js --external=vscode --format=cjs --target=node",
		"typecheck": "bun tsgo --noEmit",
		"lint": "bun biome check .",
		"fix": "bun biome check . --write"
	},
	"dependencies": {
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/bun": "1.3.7",
		"@types/vscode": "1.108.1",
		"@typescript/native-preview": "7.0.0-dev.20260127.1"
	}
}
